<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/detail_vacation_image"
            android:layout_width="wrap_content"
            android:layout_height="350dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/urlaub8" />

        <TextView
            android:id="@+id/detail_name_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:textSize="23sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_vacation_image"
            tools:text="Beatiful Landscape" />

        <TextView
            android:id="@+id/detail_price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/detail_name_text"
            app:layout_constraintStart_toStartOf="@+id/detail_name_text"
            app:layout_constraintTop_toBottomOf="@+id/detail_name_text"
            tools:text="@string/preis3" />

        <Button
            android:id="@+id/detail_book_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/detail_name_text"
            app:layout_constraintStart_toStartOf="@+id/detail_name_text"
            app:layout_constraintTop_toBottomOf="@+id/detail_price_text" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>